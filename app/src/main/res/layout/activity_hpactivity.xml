                    android:layout_height="150dp"/>


                <TextView
                    android:id="@+id/tvIphone14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="88dp"
                    android:layout_marginTop="8dp"
                    android:text="Iphone 14"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivIphone14"
                    app:layout_constraintTop_toTopOf="@id/ivIphone14" />

                <TextView
                    android:id="@+id/tvIphone14price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="64dp"
                    android:text="Harga : Rp 12.999.999 "
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/ivIphone14"
                    app:layout_constraintTop_toBottomOf="@id/tvDescriptionIphone14" />

                <TextView
                    android:id="@+id/tvDescriptionIphone14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="iPhone 14. Dengan sistem kamera ganda paling hebat di iPhone. iPhone dengan iOS 16 Bionic"


                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@id/tvIphone14price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/ivIphone14"
                    app:layout_constraintTop_toBottomOf="@id/tvIphone14" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardIphone15"
            app:layout_constraintTop_toBottomOf="@id/cardIphone14"
            app:layout_constraintStart_toStartOf="@id/cardIphone14"
            app:layout_constraintEnd_toEndOf="@id/cardIphone14"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="15dp"
