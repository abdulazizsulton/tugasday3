                    android:layout_marginStart="88dp"
                    android:layout_marginTop="8dp"
                    android:text="Iphone 15"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivIphone15"
                    app:layout_constraintTop_toTopOf="@id/ivIphone15" />

                <TextView
                    android:id="@+id/tvIphone15price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="64dp"
                    android:text="Harga : Rp 14.999.999 "
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/ivIphone15"
                    app:layout_constraintTop_toBottomOf="@id/tvDescriptionIphone15" />

                <TextView
                    android:id="@+id/tvDescriptionIphone15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
