                    app:layout_constraintTop_toBottomOf="@id/tvIphone15pro" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardIphone15promax"
            app:layout_constraintTop_toBottomOf="@id/cardIphone15pro"
            app:layout_constraintStart_toStartOf="@id/cardIphone15pro"
            app:layout_constraintEnd_toEndOf="@id/cardIphone15pro"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="15dp"
